<%= form_for(@zone) do |f| %>
  <% if @zone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@zone.errors.count, "error") %> prohibited this zone from being saved:</h2>

      <ul>
      <% @zone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :col => 60, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :zone_type_id %><br />
    <%= select("zone", "zone_type_id", ZoneType.all.collect {|z| [z.name, z.id] }) %>
  </div>
  <div class="field">
    <%= f.label :width %><br />
    <%= f.text_field :width, :size => "4", :maxlength => "4" %>px
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height, :size => "4", :maxlength => "4" %>px
  </div>
  <div class="field">
    <%= f.label :account_id %><br />
    <%= select("zone", "account_id", Account.all.collect {|a| [a.company_name, a.id] }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
